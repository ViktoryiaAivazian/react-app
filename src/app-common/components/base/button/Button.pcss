.btn {
    display: block;
    padding: 7px 17px;
    background: #e50914;
    color: #fff;
    border-radius: 3px;
    cursor: pointer;
    transition: background-color 0.2s, border-color 0.2s, color 0.2s;
    border: 2px solid transparent;
    &:hover {
        background-color: transparent;
        border-color: #e50914;
        color: #e50914;
    }
}